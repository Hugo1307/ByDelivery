<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <RelativeLayout
        android:id="@+id/topBanner"
        android:layout_width="match_parent"
        android:layout_height="00dp"
        android:background="@drawable/azul"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent="0.25">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/topBanner"
        app:layout_constraintHeight_percent="0.75"
        app:layout_constraintTop_toBottomOf="@id/topBanner"
        tools:layout_editor_absoluteX="0dp"
        android:background="#F5F5F5">

        <RelativeLayout
            android:id="@+id/category1"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/category_panel">

            <ImageView
                android:id="@+id/category1_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/food_icon">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/category1_icon"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Comida"
                android:textAlignment="center"
                android:textSize="16sp">

            </TextView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/category2"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/category_panel">

            <ImageView
                android:id="@+id/category2_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/clothes_icon">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/category2_icon"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Roupa"
                android:textAlignment="center"
                android:textSize="16sp">

            </TextView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/category3"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="35dp"
            android:background="@drawable/category_panel">

            <ImageView
                android:id="@+id/category3_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/farmacia_icon">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/category3_icon"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Farmácia"
                android:textAlignment="center"
                android:textSize="16sp">

            </TextView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/category4"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_below="@+id/category1"
            android:layout_alignParentStart="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/category_panel">

            <ImageView
                android:id="@+id/category4_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/computer_icon">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/category4_icon"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Tecnologia"
                android:textAlignment="center"
                android:textSize="16sp">

            </TextView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/category5"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_below="@id/category2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:background="@drawable/category_panel">

            <ImageView
                android:id="@+id/category5_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/book_icon">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/category5_icon"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Papelaria"
                android:textAlignment="center"
                android:textSize="16sp">

            </TextView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/category6"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_below="@+id/category3"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="35dp"
            android:background="@drawable/category_panel">

            <ImageView
                android:id="@+id/category6_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/clothes_icon">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/category6_icon"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Eletrónicos"
                android:textAlignment="center"
                android:textSize="16sp">

            </TextView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/category7"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_below="@+id/category4"
            android:layout_alignParentStart="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/category_panel">

            <ImageView
                android:id="@+id/category7_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/fitness_icon">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/category7_icon"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Exercício"
                android:textAlignment="center"
                android:textSize="16sp">

            </TextView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/category8"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_below="@+id/category5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:background="@drawable/category_panel">

            <ImageView
                android:id="@+id/category8_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/more_icon">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/category8_icon"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Outros"
                android:textAlignment="center"
                android:textSize="16sp">

            </TextView>

        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>