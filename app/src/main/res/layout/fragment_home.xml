<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundLightGray"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:id="@+id/topBanner"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/azul">

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/topBanner">

                <RelativeLayout
                    android:id="@+id/category1"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="35dp"
                    android:background="@drawable/category_panel">

                    <ImageView
                        android:id="@+id/category1_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/food_icon">

                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_below="@id/category1_icon"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="16sp"
                        android:text="Comida"
                        android:textAlignment="center">

                    </TextView>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/category2"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/category_panel">

                    <ImageView
                        android:id="@+id/category2_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/clothes_icon">

                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_below="@id/category2_icon"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="16sp"
                        android:text="Roupa"
                        android:textAlignment="center">

                    </TextView>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/category3"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="35dp"
                    android:background="@drawable/category_panel">

                    <ImageView
                        android:id="@+id/category3_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/farmacia_icon">

                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_below="@id/category3_icon"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="16sp"
                        android:text="Farmácia"
                        android:textAlignment="center">

                    </TextView>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/category4"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_below="@+id/category1"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="35dp"
                    android:layout_marginStart="35dp"
                    android:background="@drawable/category_panel">

                    <ImageView
                        android:id="@+id/category4_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/computer_icon">

                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_below="@id/category4_icon"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="16sp"
                        android:text="Tecnologia"
                        android:textAlignment="center">

                    </TextView>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/category5"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/category2"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/category_panel">

                    <ImageView
                        android:id="@+id/category5_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/book_icon">

                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_below="@id/category5_icon"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="16sp"
                        android:text="Papelaria"
                        android:textAlignment="center">

                    </TextView>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/category6"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_below="@+id/category3"
                    android:layout_marginTop="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="35dp"
                    android:background="@drawable/category_panel">

                    <ImageView
                        android:id="@+id/category6_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/clothes_icon">

                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_below="@id/category6_icon"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="16sp"
                        android:text="Eletrónicos"
                        android:textAlignment="center">

                    </TextView>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/category7"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_below="@+id/category4"
                    android:layout_marginTop="35dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="35dp"
                    android:background="@drawable/category_panel">

                    <ImageView
                        android:id="@+id/category7_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/fitness_icon">

                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_below="@id/category7_icon"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="16sp"
                        android:text="Exercício"
                        android:textAlignment="center">

                    </TextView>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/category8"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_below="@+id/category5"
                    android:layout_marginTop="35dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/category_panel">

                    <ImageView
                        android:id="@+id/category8_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/more_icon">

                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_below="@id/category8_icon"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="16sp"
                        android:text="Outros"
                        android:textAlignment="center">

                    </TextView>

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>