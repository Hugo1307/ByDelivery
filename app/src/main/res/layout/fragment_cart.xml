    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/label_cartTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/lato_bold_italic"
            android:text="@string/cartTitle"
            android:textSize="30sp"/>

        <RelativeLayout
            android:id="@+id/choosePanel_EntregaNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_cartTitle"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/choose_panel">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/entregaNormal"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_cartTitle"
            android:layout_toRightOf="@+id/choosePanel_EntregaNormal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/choose_panel">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/entregaExpresso"/>

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/choosePanel_EntregaNormal"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp" />

