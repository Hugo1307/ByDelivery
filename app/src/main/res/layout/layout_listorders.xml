<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/ordersItemMainLayout">

    <RelativeLayout
        android:id="@+id/ordersItemLayout1"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ordersProductImage"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/azul">

        </de.hdodenhof.circleimageview.CircleImageView>

       <ImageView
           android:id="@+id/ordersItemDeliveryType"
           android:layout_width="25dp"
           android:layout_height="25dp"
           android:layout_alignParentBottom="true"
           android:layout_marginStart="45dp"
           android:layout_marginBottom="15dp"
           android:src="@drawable/ic_express_delivery_blue_24dp"
           android:visibility="invisible"/>

        <TextView
            android:id="@+id/ordersProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/ordersProductImage"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/lato_bold"
            android:textSize="17sp"
            android:text="[Produto]"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ordersMoreInfoIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:src="@drawable/more_icon"/>

            <ImageView
                android:id="@+id/ordersCancelOrderIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/ordersMoreInfoIcon"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_cancel_black_24dp"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ordersItemLayout2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/ordersItemLayout1">

        <TextView
            android:id="@+id/ordersItemLabel1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/lato_bold"
            android:textSize="16sp"
            android:text="Estado da encomenda"/>

        <TextView
            android:id="@+id/ordersItemEstadoPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ordersItemLabel1"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/lato"
            android:textSize="16sp"
            android:text="Em trânsito"/>

        <TextView
            android:id="@+id/ordersItemLabel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ordersItemEstadoPedido"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/lato_bold"
            android:textSize="16sp"
            android:text="Pedido às"/>

        <TextView
            android:id="@+id/ordersItemDataPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ordersItemLabel2"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/lato"
            android:textSize="16sp"
            android:text="22/03/2020 19:43"/>

        <TextView
            android:id="@+id/ordersItemLabel3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ordersItemDataPedido"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/lato_bold"
            android:textSize="16sp"
            android:text="Previsão"/>

        <TextView
            android:id="@+id/ordersItemPedidoPrevisao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ordersItemLabel3"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/lato"
            android:textSize="16sp"
            android:text="20:43"/>

    </RelativeLayout>

</RelativeLayout>