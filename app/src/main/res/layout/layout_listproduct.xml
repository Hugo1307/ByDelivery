<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout_products"
    app:layout_constraintWidth_percent="0.5">

    <RelativeLayout
        android:id="@+id/productLayout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/productImage2"
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:scaleType="fitXY"
            android:src="@drawable/binafa_banner"
            android:background="@drawable/product_image"
            android:outlineProvider="background"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:background="@drawable/infopanel_productlist">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teste"
                android:id="@+id/productName2"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:fontFamily="@font/lato_bold"/>

            <TextView
                android:id="@+id/productSellerName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[Parceiro]"
                android:layout_below="@id/productName2"
                android:layout_marginStart="10dp"
                android:textSize="12sp"
                android:fontFamily="@font/lato"/>

            <TextView
                android:id="@+id/productPrice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/roboto_medium"
                android:textSize="14sp"
                android:textAlignment="center"
                android:text="[PreÃ§o]"/>
        </RelativeLayout>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>